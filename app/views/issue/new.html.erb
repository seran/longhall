<section class="section">
	<div class="columns">
		<div class="column is-5">
			<h4 class="title">New issue</h4>
			<hr />
			<%= simple_form_for (@record), {url: create_issue_path(@scope.uuid)} do |f| %>
			<div class="field">
				<div class="control">
					<%= f.input :title, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, error_html: { class: "help is-danger" } %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<%= f.input :description, required: true, input_html: { rows: 10, class: "textarea"}, wrapper: false, label_html: { class: "label" }, error_html: { class: "help is-danger" } %>
				</div>
			</div>
			<hr />
			<div class="field is-grouped is-grouped-right">
				<div class="control">
					<%= link_to "Cancel", issues_list_path, class: "button is-primary is-outlined" %>
				</div>
				<div class="control">
					<%= f.button :submit, "Submit", class:"button is-primary is-fullwidth" %>
				</div>
			</div>
			<% end %>

			<br>
		</div>
	</div>
</section>