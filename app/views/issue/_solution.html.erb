<%= simple_form_for (record), {url: add_solution_url(record.uuid), method: :patch} do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :solution, required: true, input_html: { rows: 3, class: "textarea"}, wrapper: false, label_html: { class: "label" }, error_html: { class: "help is-danger" } %>
    </div>
  </div>
  <div class="field is-grouped is-grouped-right">
    <div class="control">
      <%= f.button :submit, "Solution", class:"button is-primary is-fullwidth is-small" %>
    </div>
  </div>
<% end %>