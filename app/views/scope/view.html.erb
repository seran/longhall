<div class="columns">
	<div class="column">
		<div class="columns">
			<div class="column">
				<%= link_to new_issue_path(uuid: @record.uuid), class: "button is-primary is-outlined is-small"  do %>
				<%= fa_icon "pencil" %>&nbsp;New issue
				<% end %>
			</div>
		</div>

		<div class="columns">
			<div class="column">
				<div class="columns">
					<div class="column">
						<p class="has-text-weight-semibold">Details</p>
					</div>
					<div class="column is-5">
						<% if @record.issue.length > 0 %>
							<%= render partial: 'pagy/bulma_nav', locals: {pagy: @pagy} %>
						<% end %>
					</div>
				</div>
				<div class="columns">
					<div class="column">
						<table class="table is-fullwidth is-striped is-bordered">
							<tbody>
								<tr>
									<td width="25%">Title</td>
									<td><%= @record.title %></td>
								</tr>
								<tr>
									<td>Description</td>
									<td><%= @record.description %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="columns">
					<div class="column">
						<div class="columns">
							<div class="column">
								<p class="has-text-weight-semibold">Issues</p>
							</div>
							<div class="column is-5">
								<% if @record.issue.length > 0 %>
								<%= render partial: 'pagy/bulma_nav', locals: {pagy: @pagy} %>
								<% end %>
							</div>
						</div>
						<% if @record.issue.length > 0 %>
						<div class="columns">
							<div class="column">
								<table class="table is-striped is-fullwidth is-bordered">
									<tbody>
										<% @records.each do |s| %>
										<tr>
											<td width="5%"><%= fa_icon "folder" %></td>
											<td width="30%"><%= s.title %></td>
											<td><%= s.description %></td>
											<td class="level-right">
												<%= link_to view_issue_path(s.uuid)  do %>
												<%= fa_icon "folder-open-o" %>
												<% end %>
											</td>
										</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
						<% else %>
						<div class="columns">
							<div class="column">
								<h4>No issues.</h4>
							</div>
						</div>
						<% end %>

					</div>
				</div>

			</div>
		</div>
	</div>
</div>