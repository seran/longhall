<section class="section">
	<div class="columns is-centered">
		<div class="column is-6">
			<h4 class="title">Project</h4>
			<hr />
			<%= simple_form_for (@project), {url: project_create_path(@project)} do |f| %>
			<div class="field">
				<div class="control">
					<%= f.input :name, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, error_html: { class: "help is-danger" } %>
				</div>
			</div>
			<div class="field">
				<div class="control">
					<%= f.input :description, required: true, input_html: { rows: 10, class: "textarea"}, wrapper: false, label_html: { class: "label" }, error_html: { class: "help is-danger" } %>
				</div>
			</div>
			<hr />
			<%= f.button :submit, "Submit", class:"button is-primary is-fullwidth" %>
			<% end %>

			<br>
			<p class="has-text-centered"><%= link_to "Cancel", projects_list_path, class: "" %></p>
		</div>
	</div>
</section>